<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Animalandia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark customGreenBG py-3">
            <div class="container irish">
                @Html.ActionLink("Animalandia", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item me-5">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link homeLink" + (ViewBag.ActivePage == "Home" ? " active" : "") })</li>
                        <li class="nav-item me-5">@Html.ActionLink("Gallery", "Gallery", "Home", new { area = "" }, new { @class = "nav-link homeLink" + (ViewBag.ActivePage == "Gallery" ? " active" : "") })</li>
                        <li class="nav-item me-5">@Html.ActionLink("About Us", "AboutUs", "Home", new { area = "" }, new { @class = "nav-link homeLink" + (ViewBag.ActivePage == "AboutUs" ? " active" : "") })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container-xl body-content">
        @RenderBody()
    </main>
    <footer class="container-fluid customGreenBG d-flex justify-content-center mt-3" style="height: 5rem">
        <p class="irish text-white align-content-center pt-3 mt-3">&copy; @DateTime.Now.Year - Animalandia — ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
