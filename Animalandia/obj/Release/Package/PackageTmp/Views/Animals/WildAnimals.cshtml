@using Animalandia.Models
@model IEnumerable<Animal>

@{
    Layout = "~/Views/Shared/_AnimalsLayout.cshtml";
    //ViewBag.Title = "Wild Animals";
}

@{
    bool isEven = true;
    int index = 0;
}

@foreach (var wildAnimal in Model)
{
    var audioId = "audio" + index;
    if (isEven)
    {
        <section class="row customGreen d-flex flex-row galleryBG irish py-4 px-3 my-3 mx-2 mx-lg-4">
            <div class="col-12 col-lg-5 d-flex flex-column">
                <img class="soundIcon align-self-start mb-3 ms-2" src="~/Content/Icons/volume.png" onclick="document.getElementById('@audioId').play();" />
                <audio id="@audioId">
                    <source src="@Url.Content(wildAnimal.SoundFilePath)" type="audio/mpeg" />
                </audio>
                <img class="rounded-4" src="@Url.Content(wildAnimal.ImageFilePath)" alt="@wildAnimal.Name" />
                <p class="galleryFS text-center fw-semibold m-0 pb-0 mt-3">@wildAnimal.Name</p>
            </div>
            <div class="col-12 col-lg-7 align-content-center">
                <p class="galleryFS text-center px-lg-5 mt-4 mt-lg-0">"@wildAnimal.Introduction()"</p>
                <p class="galleryFS px-lg-5 mt-4">
                    <span class="fw-bold">Description:</span><br />@wildAnimal.Description()
                </p>
            </div>
        </section>
    }
    else
    {
        <section class="row customGreen d-flex flex-column-reverse flex-lg-row galleryBG irish py-4 px-3 my-3 mx-2 mx-lg-4">
            <div class="col-12 col-lg-7 align-content-center">
                <p class="galleryFS text-center px-lg-5 mt-4 mt-lg-0">"@wildAnimal.Introduction()"</p>
                <p class="galleryFS px-lg-5 mt-4">
                    <span class="fw-bold">Description:</span><br />@wildAnimal.Description()
                </p>
            </div>
            <div class="col-12 col-lg-5 d-flex flex-column">
                <img class="soundIcon align-self-lg-end mb-3 ms-2 ms-0 me-lg-2" src="~/Content/Icons/volume.png" onclick="document.getElementById('@audioId').play();" />
                <audio id="@audioId">
                    <source src="@Url.Content(wildAnimal.SoundFilePath)" type="audio/mpeg" />
                </audio>
                <img class="rounded-4" src="@Url.Content(wildAnimal.ImageFilePath)" alt="@wildAnimal.Name" />
                <p class="galleryFS text-center fw-semibold m-0 pb-0 mt-3">@wildAnimal.Name</p>
            </div>
        </section>
    }
    isEven = !isEven;
    index++;
}
